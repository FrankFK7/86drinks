<h2> Cocktails List </h2>

<div id="random"> 
    

    <form action="/cocktailSearch" method="GET" >
    <input class="form-control me-2" 
    type="text" placeholder="Search by Alcohol " aria-label="Search" name="searchTerm">
  <button class="btn btn-outline-success" type="submit">Search</button>

     
             <div class="container">
               <div class="row justify-content-between">
    {{#each randomDrinks }}
    
    <div class="'col">
     <div class="card" style="width:255px" >
          <form action="/cocktails-list" method="POST"> 
            
          <img src="{{strDrinkThumb}}" class="card-img-top" alt="..." data-holder-rendered="true" width="255" height="255" />
            <div class="card-body">
    <h5 class="card-title"> Cocktail: {{ strDrink }}</h5>
    <p class="card-text"> Category: {{strCategory}} <br> 
                          Glass: {{strGlass}} <br> 
                          Ingredient: {{strIngredient1}} {{strIngredient2}} {{strIngredient3}} <br> 
                          Measure: {{strMeasure1}} ,{{strMeasure2}} {{strMeasure3}} <br>.</p>
                 <button>Add</button>
              </div>
             
            



        </h4> 
           
          <input type="hidden" name="title" value="{{ strDrink }}" >
         <input type="hidden"  name="category" value="{{strCategory}}">
          <input type="hidden" name="glass" value="{{strGlass}}">
        <input type="hidden"  name="ingredient" value="{{strIngredient1}} ">
         <input type="hidden"  name="measure"  value=" {{strMeasure1}}">

<option value={{ _id }}> {{firstName}} {{lastName}} </option>


            
            </form>
     </div>
         </div>   
    {{/each}}
    </div>

             </div>
</div> 


